.asset{:id => "asset_"+@content.asset.id.to_s}
  -id = @content.url.split("v=").last.split("&").first
  %object{:width => 400, :heigh => 300, :class => "fit #{@css_class}"}
    %param{:name => "movie", :value => "http://www.youtube.com/v/#{id}"}
    %param{:name => "allowFullScreen", :value => "true"}
    %param{:name => "allowScriptAccess", :value => "always"}
    %embed{:src => "http://www.youtube.com/v/#{id}", :type => "application/x-shockwave-flash",  :allowscriptaccess => "always", :allowfullscreen => "true",  :width => 400, :height => 300}
